<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastro da Empresa</title>
    <link rel="stylesheet" href="/css/dist/index.css" />
    <link rel="shortcut icon" href="/icon/painel.png" type="image/x-icon">
  </head>
  <body class="bg-gray-100 h-screen flex items-center justify-center">
    <% if (errorMessage) { %>
    <div
      id="error-message"
      class="fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-md transition-opacity duration-300 opacity-100"
      role="alert"
    >
      <strong class="font-bold">Erro:</strong>
      <span class="block sm:inline"><%= errorMessage %></span>
    </div>
    <% } %> <% if (successMessage) { %>
    <div
      id="success-message"
      class="fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-md transition-opacity duration-300 opacity-100"
      role="alert"
    >
      <strong class="font-bold">Sucesso:</strong>
      <span class="block sm:inline"><%= successMessage %></span>
    </div>
    <% } %>
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
      <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">
        Cadastro da Empresa
      </h2>
      <form action="/cadastro/create" method="POST" class="space-y-6">
        <div class="mb-4">
          <label for="nmEmpresa" class="block text-gray-700"
            >Nome da Empresa</label
          >
          <input
            type="text"
            id="nmEmpresa"
            name="nmEmpresa"
            class="w-full p-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Digite o nome da empresa"
            required
          />
        </div>
        <div class="mb-4">
          <label for="cnpj" class="block text-gray-700">CNPJ</label>
          <input
            type="text"
            id="cnpj"
            name="cnpj"
            class="w-full p-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Digite o CNPJ da empresa"
            required
          />
        </div>
        <div class="mb-4">
          <label for="emailEmpresa" class="block text-gray-700"
            >Email da Empresa</label
          >
          <input
            type="email"
            id="emailEmpresa"
            name="emailEmpresa"
            class="w-full p-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Digite o email da empresa"
            required
          />
        </div>
        <div class="mb-4">
          <label for="passwordEmpresa" class="block text-gray-700">Senha</label>
          <input
            type="password"
            id="passwordEmpresa"
            name="passwordEmpresa"
            class="w-full p-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Digite a senha"
            required
          />
        </div>
        <div class="mb-4">
          <p class="text-sm text-gray-600">
            Já tem uma conta?
            <a href="/" class="text-blue-600 hover:text-blue-800"
              >Faça o login</a
            >
          </p>
        </div>
        <div>
          <button
            type="submit"
            class="w-full py-3 px-4 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none"
          >
            Cadastrar
          </button>
        </div>
      </form>
    </div>
    <script>
      setTimeout(() => {
        const errorMessage = document.getElementById("error-message");
        const successMessage = document.getElementById("success-message");
        if (errorMessage) {
          errorMessage.classList.add("opacity-0");
          setTimeout(() => (errorMessage.style.display = "none"), 300);
        }
        if (successMessage) {
          successMessage.classList.add("opacity-0");
          setTimeout(() => (successMessage.style.display = "none"), 300);
          setTimeout(() => {
            window.location.href = "/";
          }, 300);
        }
      }, 2000);
    </script>
  </body>
</html>
